<h1>Stream list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Text</th>
            <th>State</th>
            <th>Type</th>
            <th>Createdat</th>
            <th>Poll</th>
            <th>Url</th>
            <th>Media</th>
            <th>Access</th>
            <th>Featured</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('stream_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.text }}</td>
            <td>{{ entity.state }}</td>
            <td>{{ entity.type }}</td>
            <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.poll }}</td>
            <td>{{ entity.url }}</td>
            <td>{{ entity.media }}</td>
            <td>{{ entity.access }}</td>
            <td>{{ entity.featured }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('stream_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('stream_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('stream_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
