<?xml version="1.0" encoding="windows-1250"?>

<xml>
{% for user in users %}
    <user>
        {% for key, line in user %}
            {% if (key == 'birthday') %}
                <{{key}}>{{ line|date('Y-m-d') }}</{{key}}>
            {% elseif (key == 'account_birthday') %}
                <{{key}}>{{ line|date('Y-m-d') }}</{{key}}>
            {% elseif (key == 'influence') %}
                <influences>
                {% for influence in line %}
                    <influence>{{ influence }}</influence>
                {% endfor %}
                </influences>
            {% else %}
                <{{key}}>{{line}}</{{key}}>
            {% endif %}
        {% endfor %}
    </user>
{% endfor %}
</xml>
