<h1>User list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Email</th>
            <th>Name</th>
            <th>Firstname</th>
            <th>Isactive</th>
            <th>Birthday</th>
            <th>Sexe</th>
            <th>Account_birthday</th>
            <th>City</th>
            <th>Last_connect</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        {% set sexe = 'form.sexe.'~ entity.sexe %}
        <tr>
            <td><a href="{{ path('api_user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.username }}</td>
            <td>{{ entity.email }}</td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.firstname }}</td>
            <td>{{ entity.isActive }}</td>
            <td>{% if entity.birthday %}{{ entity.birthday|date('Y-m-d') }}{% endif %}</td>
            <td>{{ sexe | trans({}, 'user') }}</td>
            <td>{% if entity.accountbirthday %}{{ entity.accountbirthday|date('Y-m-d') }}{% endif %}</td>
            <td>{{ entity.city }}</td>
            <td>{% if entity.lastconnect %}{{ entity.lastconnect|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('api_user_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('api_user_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('api_user_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
